<Window x:Class="InternshipVT.AddNewStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternshipVT"
        mc:Ignorable="d"
        Title="AddNewStudent" Height="450" Width="800">
    <Grid Background="#FF2787C8">
        <Button x:Name="HomeButton" Content="Back" HorizontalAlignment="Left" Margin="653,339,0,0" VerticalAlignment="Top" FontSize="14" Height="30" Width="96" Click="HomeButton_Click"/>
        <TextBox x:Name="NameField" HorizontalAlignment="Center" Margin="0,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="NameField_TextChanged"/>
        <TextBox x:Name="ContactField" HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="NameField_TextChanged"/>
        <ComboBox x:Name="SelectSP" Margin="340,270,340,0" VerticalAlignment="Top" Width="120" FontSize="14" SelectionChanged="SelectSP_SelectionChanged"/>
        <Button x:Name="AddNewStudentButton" Content="Add new student" HorizontalAlignment="Center" Margin="0,339,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" RenderTransformOrigin="0.868,0.369" Click="AddNewStudentButton_Click" Height="30"/>

    </Grid>
</Window>
